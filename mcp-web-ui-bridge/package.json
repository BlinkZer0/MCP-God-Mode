{
  "name": "mcp-web-ui-bridge",
  "version": "0.1.0",
  "description": "MCP server for browser/app automation to chat with AI services without APIs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "playwright:install": "npx playwright install --with-deps",
    "appium:start": "appium --log-level error",
    "appium:start:win": "scripts\\launch-appium.bat",
    "appium:start:unix": "scripts/launch-appium.sh",
    "android:emu": "emulator -avd Pixel_7_API_35",
    "ios:sim": "xcrun simctl boot 'iPhone 15 Pro'",
    "test": "npm run test:desktop",
    "test:desktop": "node scripts/test-desktop.js",
    "test:mobile": "node scripts/test-mobile.js",
    "test:android": "PLATFORM=android node scripts/test-mobile.js",
    "test:ios": "PLATFORM=ios node scripts/test-mobile.js",
    "clean": "rm -rf dist",
    "setup": "npm install && npm run playwright:install"
  },
  "keywords": [
    "mcp",
    "browser-automation",
    "playwright",
    "appium",
    "ai-chat",
    "web-ui"
  ],
  "author": "MCP God Mode",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "playwright": "^1.40.0",
    "appium": "^2.0.0",
    "@appium/opencv": "^1.0.0",
    "webdriverio": "^8.0.0",
    "@nut-tree/nut-js": "^3.0.0",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "keytar": "^7.9.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "commander": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
