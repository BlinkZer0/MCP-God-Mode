# Drone Management Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# DRONE MANAGEMENT INTEGRATION
# ===========================================

# Enable drone management tools (default: false for safety)
MCPGM_DRONE_ENABLED=true

# Enable simulation-only mode (default: true for safety)
# When true, all drone operations are simulated with console output
# When false, attempts to interface with real drone hardware
MCPGM_DRONE_SIM_ONLY=true

# Require confirmation for drone deployments (default: true)
# When true, drone operations require explicit confirmation
# When false, operations can proceed automatically
MCPGM_REQUIRE_CONFIRMATION=true

# Enable audit logging for drone operations (default: true)
# When true, all drone operations are logged for compliance
MCPGM_AUDIT_ENABLED=true

# ===========================================
# SAFETY AND COMPLIANCE SETTINGS
# ===========================================

# HIPAA compliance mode (default: false)
# When true, offensive drone operations are disabled
MCPGM_MODE_HIPAA=false

# GDPR compliance mode (default: false)
# When true, offensive drone operations are disabled
MCPGM_MODE_GDPR=false

# ===========================================
# FLIPPER ZERO INTEGRATION
# ===========================================

# Enable Flipper Zero integration for drone control (default: false)
# When true, allows Flipper Zero to control real drone hardware
MCPGM_FLIPPER_ENABLED=false

# ===========================================
# EXAMPLES FOR DIFFERENT USE CASES
# ===========================================

# Example 1: Safe simulation mode (recommended for testing)
# MCPGM_DRONE_ENABLED=true
# MCPGM_DRONE_SIM_ONLY=true
# MCPGM_REQUIRE_CONFIRMATION=true
# MCPGM_AUDIT_ENABLED=true
# MCPGM_FLIPPER_ENABLED=false

# Example 2: Real hardware with Flipper Zero (USE WITH CAUTION)
# MCPGM_DRONE_ENABLED=true
# MCPGM_DRONE_SIM_ONLY=false
# MCPGM_REQUIRE_CONFIRMATION=true
# MCPGM_AUDIT_ENABLED=true
# MCPGM_FLIPPER_ENABLED=true

# Example 3: Automated drone response (requires proper authorization)
# MCPGM_DRONE_ENABLED=true
# MCPGM_DRONE_SIM_ONLY=true
# MCPGM_REQUIRE_CONFIRMATION=false
# MCPGM_AUDIT_ENABLED=true
# MCPGM_FLIPPER_ENABLED=false

# Example 4: HIPAA/GDPR compliant mode
# MCPGM_DRONE_ENABLED=true
# MCPGM_DRONE_SIM_ONLY=true
# MCPGM_REQUIRE_CONFIRMATION=true
# MCPGM_AUDIT_ENABLED=true
# MCPGM_MODE_HIPAA=true
# MCPGM_MODE_GDPR=true
# MCPGM_FLIPPER_ENABLED=false
