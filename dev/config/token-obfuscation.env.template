# Token Obfuscation Configuration Template
# Copy this file to token-obfuscation.env and customize as needed

# ===========================================
# BASIC CONFIGURATION
# ===========================================

# Obfuscation level: minimal, moderate, aggressive, stealth
OBFUSCATION_LEVEL=moderate

# Token reduction factor (0.01 = 1%, 1.0 = 100%)
REDUCTION_FACTOR=0.1

# Padding strategy: random, pattern, adaptive
PADDING_STRATEGY=adaptive

# Proxy server port
PROXY_PORT=8080

# Enable streaming response processing
ENABLE_STREAMING=true

# Preserve functionality (recommended: true)
PRESERVE_FUNCTIONALITY=true

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Custom headers (JSON format)
CUSTOM_HEADERS={"x-custom-header": "value"}

# Target URL for proxying (default: Cursor API)
TARGET_URL=https://api.cursor.sh

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Buffer size for streaming
STREAM_BUFFER_SIZE=8192

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Enable request logging
ENABLE_LOGGING=true

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/token-obfuscation.log

# Enable statistics tracking
ENABLE_STATISTICS=true

# Statistics update interval (seconds)
STATS_UPDATE_INTERVAL=60

# ===========================================
# FALLBACK MECHANISMS
# ===========================================

# Enable automatic fallback on errors
ENABLE_FALLBACK=true

# Fallback obfuscation level
FALLBACK_LEVEL=minimal

# Maximum retry attempts
MAX_RETRY_ATTEMPTS=3

# Retry delay in milliseconds
RETRY_DELAY=1000

# Enable circuit breaker
ENABLE_CIRCUIT_BREAKER=true

# Circuit breaker threshold
CIRCUIT_BREAKER_THRESHOLD=10

# Circuit breaker timeout (seconds)
CIRCUIT_BREAKER_TIMEOUT=60

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Enable connection pooling
ENABLE_CONNECTION_POOLING=true

# Connection pool size
CONNECTION_POOL_SIZE=10

# Keep-alive timeout (seconds)
KEEP_ALIVE_TIMEOUT=30

# Enable compression
ENABLE_COMPRESSION=true

# Compression level (1-9)
COMPRESSION_LEVEL=6

# ===========================================
# MONITORING AND ALERTING
# ===========================================

# Enable health checks
ENABLE_HEALTH_CHECKS=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Enable metrics collection
ENABLE_METRICS=true

# Metrics export port
METRICS_PORT=9090

# Enable alerting
ENABLE_ALERTING=false

# Alert threshold for error rate (%)
ALERT_ERROR_THRESHOLD=5

# Alert threshold for response time (ms)
ALERT_RESPONSE_THRESHOLD=5000

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug mode
DEBUG_MODE=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Enable request/response dumping
ENABLE_DUMPING=false

# Dump file path
DUMP_FILE=./logs/request-dump.log

# ===========================================
# CURSOR INTEGRATION
# ===========================================

# Cursor configuration file path
CURSOR_CONFIG_PATH=

# Auto-generate Cursor config
AUTO_GENERATE_CURSOR_CONFIG=true

# Cursor config template
CURSOR_CONFIG_TEMPLATE=./templates/cursor-config.json

# ===========================================
# BACKUP AND RECOVERY
# ===========================================

# Enable configuration backup
ENABLE_CONFIG_BACKUP=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention (days)
BACKUP_RETENTION=7

# Backup directory
BACKUP_DIRECTORY=./backups

# ===========================================
# NOTIFICATIONS
# ===========================================

# Enable notifications
ENABLE_NOTIFICATIONS=false

# Notification methods: email, webhook, slack
NOTIFICATION_METHODS=email

# Email configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_TO=

# Webhook URL
WEBHOOK_URL=

# Slack webhook URL
SLACK_WEBHOOK_URL=

# ===========================================
# CUSTOMIZATION
# ===========================================

# Custom obfuscation patterns (JSON array)
CUSTOM_PATTERNS=[]

# Custom padding characters (JSON array)
CUSTOM_PADDING_CHARS=[]

# Custom token reduction algorithms
CUSTOM_ALGORITHMS=[]

# Plugin directory
PLUGIN_DIRECTORY=./plugins

# Enable plugin system
ENABLE_PLUGINS=false
