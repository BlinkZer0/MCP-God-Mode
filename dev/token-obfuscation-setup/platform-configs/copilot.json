{
  "platform": "Co-Pilot",
  "description": "Configuration for Co-Pilot (Microsoft) AI platform",
  "proxy": {
    "http": "http://localhost:8080",
    "https": "http://localhost:8080"
  },
  "headers": {
    "x-target-url": "https://api.bing.com/copilot",
    "x-obfuscation-enabled": "true",
    "x-obfuscation-level": "moderate",
    "microsoft-version": "2024-02-15",
    "User-Agent": "Microsoft-Copilot/1.0 (Token Obfuscation Proxy)"
  },
  "environment": {
    "HTTPS_PROXY": "http://localhost:8080",
    "HTTP_PROXY": "http://localhost:8080",
    "NO_PROXY": "localhost,127.0.0.1",
    "MICROSOFT_PROXY": "http://localhost:8080"
  },
  "config_paths": {
    "windows": "%USERPROFILE%\\.microsoft\\copilot.json",
    "macos": "~/.microsoft/copilot.json",
    "linux": "~/.microsoft/copilot.json"
  },
  "environment_vars": [
    "MICROSOFT_API_KEY",
    "COPILOT_API_KEY"
  ],
  "endpoints": [
    "https://api.bing.com/copilot",
    "https://copilot.microsoft.com"
  ],
  "user_agent_patterns": [
    "copilot",
    "microsoft",
    "bing"
  ],
  "mcp_compatibility": {
    "supported": true,
    "mcp_version": "2024-11-05",
    "features": [
      "token_obfuscation",
      "proxy_middleware",
      "streaming_support",
      "web_search"
    ]
  }
}
