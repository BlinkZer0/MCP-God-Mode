# Flipper Zero Integration Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# FLIPPER ZERO INTEGRATION
# ===========================================

# Enable Flipper Zero integration (default: false for safety)
MCPGM_FLIPPER_ENABLED=true

# Enable USB CDC Serial transport (default: true)
MCPGM_FLIPPER_USB_ENABLED=true

# Enable BLE GATT transport (default: true)
MCPGM_FLIPPER_BLE_ENABLED=true

# Allow transmission operations (IR/SubGHz/BadUSB) - ENABLED BY DEFAULT
# Set to false to disable transmission operations for safety
# WARNING: IR, Sub-GHz, and BadUSB operations may be regulated in your jurisdiction
MCPGM_FLIPPER_ALLOW_TX=true

# Maximum transmission duration in seconds (default: 10)
# This limits how long transmission operations can run
MCPGM_FLIPPER_TX_MAX_SECONDS=10

# Enable detailed stream logging (default: false)
# WARNING: This may log sensitive data
MCPGM_FLIPPER_LOG_STREAMS=false

# ===========================================
# EXAMPLES FOR DIFFERENT USE CASES
# ===========================================

# Example 1: Safe Flipper Zero usage (read-only operations)
# MCPGM_FLIPPER_ENABLED=true
# MCPGM_FLIPPER_USB_ENABLED=true
# MCPGM_FLIPPER_BLE_ENABLED=true
# MCPGM_FLIPPER_ALLOW_TX=false

# Example 2: Full Flipper Zero usage (with transmission - DEFAULT BEHAVIOR)
# MCPGM_FLIPPER_ENABLED=true
# MCPGM_FLIPPER_USB_ENABLED=true
# MCPGM_FLIPPER_BLE_ENABLED=true
# MCPGM_FLIPPER_ALLOW_TX=true
# MCPGM_FLIPPER_TX_MAX_SECONDS=5

# Example 3: USB-only Flipper Zero usage
# MCPGM_FLIPPER_ENABLED=true
# MCPGM_FLIPPER_USB_ENABLED=true
# MCPGM_FLIPPER_BLE_ENABLED=false
# MCPGM_FLIPPER_ALLOW_TX=false

# Example 4: BLE-only Flipper Zero usage
# MCPGM_FLIPPER_ENABLED=true
# MCPGM_FLIPPER_USB_ENABLED=false
# MCPGM_FLIPPER_BLE_ENABLED=true
# MCPGM_FLIPPER_ALLOW_TX=false
