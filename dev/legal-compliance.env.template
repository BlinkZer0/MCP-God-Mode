# Legal Compliance Configuration Template
# Copy this file to .env and modify as needed for your legal compliance requirements

# ===========================================
# LEGAL COMPLIANCE SYSTEM
# ===========================================

# Enable/disable legal compliance system (default: false)
LEGAL_COMPLIANCE_ENABLED=false

# ===========================================
# AUDIT LOGGING CONFIGURATION
# ===========================================

# Enable audit logging (default: false)
AUDIT_LOGGING_ENABLED=false

# Audit log level: minimal, standard, comprehensive (default: standard)
AUDIT_LOG_LEVEL=standard

# Audit log retention period in days (default: 2555 = 7 years for SOX compliance)
AUDIT_RETENTION_DAYS=2555

# Include user actions in audit logs (default: true)
AUDIT_INCLUDE_USER_ACTIONS=true

# Include system events in audit logs (default: true)
AUDIT_INCLUDE_SYSTEM_EVENTS=true

# Include data access events in audit logs (default: true)
AUDIT_INCLUDE_DATA_ACCESS=true

# Include security events in audit logs (default: true)
AUDIT_INCLUDE_SECURITY_EVENTS=true

# ===========================================
# EVIDENCE PRESERVATION CONFIGURATION
# ===========================================

# Enable evidence preservation (default: false)
EVIDENCE_PRESERVATION_ENABLED=false

# Automatically preserve evidence on certain operations (default: false)
EVIDENCE_AUTO_PRESERVE=false

# Path for evidence preservation (default: ./legal/evidence)
EVIDENCE_PRESERVATION_PATH=./legal/evidence

# Hash algorithm for evidence integrity: sha256, sha512, md5 (default: sha256)
EVIDENCE_HASH_ALGORITHM=sha256

# Include metadata with evidence (default: true)
EVIDENCE_INCLUDE_METADATA=true

# Include timestamps with evidence (default: true)
EVIDENCE_INCLUDE_TIMESTAMPS=true

# Include user context with evidence (default: true)
EVIDENCE_INCLUDE_USER_CONTEXT=true

# ===========================================
# LEGAL HOLD CONFIGURATION
# ===========================================

# Enable legal hold capabilities (default: false)
LEGAL_HOLD_ENABLED=false

# Path for legal hold records (default: ./legal/holds)
LEGAL_HOLD_PATH=./legal/holds

# Retention policy: indefinite, scheduled, manual (default: manual)
LEGAL_HOLD_RETENTION_POLICY=manual

# Scheduled retention period in days (default: 30)
LEGAL_HOLD_SCHEDULED_DAYS=30

# Include notifications for legal holds (default: false)
LEGAL_HOLD_NOTIFICATIONS=false

# Email address for legal hold notifications
LEGAL_HOLD_NOTIFICATION_EMAIL=

# ===========================================
# CHAIN OF CUSTODY CONFIGURATION
# ===========================================

# Enable chain of custody tracking (default: false)
CHAIN_OF_CUSTODY_ENABLED=false

# Include digital signatures in chain of custody (default: false)
CHAIN_OF_CUSTODY_SIGNATURES=false

# Include witnesses in chain of custody (default: false)
CHAIN_OF_CUSTODY_WITNESSES=false

# Comma-separated list of witness email addresses
CHAIN_OF_CUSTODY_WITNESS_EMAILS=

# Require approval for custody actions (default: false)
CHAIN_OF_CUSTODY_APPROVAL=false

# Approval workflow: single, dual, committee (default: single)
CHAIN_OF_CUSTODY_WORKFLOW=single

# ===========================================
# DATA INTEGRITY CONFIGURATION
# ===========================================

# Enable data integrity verification (default: false)
DATA_INTEGRITY_ENABLED=false

# Verify data integrity on access (default: false)
DATA_INTEGRITY_VERIFY_ACCESS=false

# Verify data integrity on modification (default: true)
DATA_INTEGRITY_VERIFY_MODIFICATION=true

# Create backup before modification (default: true)
DATA_INTEGRITY_BACKUP_BEFORE_MOD=true

# Include checksums with data (default: true)
DATA_INTEGRITY_INCLUDE_CHECKSUMS=true

# ===========================================
# COMPLIANCE FRAMEWORKS
# ===========================================

# Sarbanes-Oxley Act (SOX) compliance (default: false)
COMPLIANCE_SOX=false

# Health Insurance Portability and Accountability Act (HIPAA) compliance (default: false)
COMPLIANCE_HIPAA=false

# General Data Protection Regulation (GDPR) compliance (default: false)
COMPLIANCE_GDPR=false

# Payment Card Industry Data Security Standard (PCI DSS) compliance (default: false)
COMPLIANCE_PCI=false

# ISO 27001 Information Security Management compliance (default: false)
COMPLIANCE_ISO27001=false

# Custom compliance framework (default: false)
COMPLIANCE_CUSTOM=false

