# MCP God Mode - Environment Configuration
# Copy this file to .env and adjust settings as needed

# Logging / audit
MCPGM_LOG_LEVEL=info
MCPGM_AUDIT_ENABLED=true

# Safety toggles
MCPGM_REQUIRE_CONFIRMATION=true
MCPGM_NETWORK_SCANNING_ENABLED=false
MCPGM_FILE_WRITE_ENABLED=true

# Compliance flags (documented in README table)
MCPGM_MODE_SOX=false
MCPGM_MODE_HIPAA=false
MCPGM_MODE_GDPR=false

# Server configuration
MCPGM_SERVER_PROFILE=refactored
MCPGM_PORT=3000

# Security settings
MCPGM_MAX_CONCURRENT_OPERATIONS=5
MCPGM_OPERATION_TIMEOUT=300000

# Development settings
MCPGM_DEBUG=false
MCPGM_VERBOSE_LOGGING=false
