# MCP God Mode - Environment Configuration
# Copy this file to .env and adjust settings as needed

# Logging / audit
MCPGM_LOG_LEVEL=info
MCPGM_AUDIT_ENABLED=true

# Safety toggles
MCPGM_REQUIRE_CONFIRMATION=true
MCPGM_NETWORK_SCANNING_ENABLED=false
MCPGM_FILE_WRITE_ENABLED=true

# Compliance flags (documented in README table)
MCPGM_MODE_SOX=false
MCPGM_MODE_HIPAA=false
MCPGM_MODE_GDPR=false

# Server configuration
MCPGM_SERVER_PROFILE=refactored
MCPGM_PORT=3000

# Security settings
MCPGM_MAX_CONCURRENT_OPERATIONS=5
MCPGM_OPERATION_TIMEOUT=300000

# Development settings
MCPGM_DEBUG=false
MCPGM_VERBOSE_LOGGING=false

# Flipper Zero integration (cross-platform)
# Enable overall integration; transports are optional and gated
MCPGM_FLIPPER_ENABLED=true
MCPGM_FLIPPER_USB_ENABLED=true
MCPGM_FLIPPER_BLE_ENABLED=true
# Allow transmission features (IR/SubGHz/BadUSB) — keep false unless you know what you’re doing
MCPGM_FLIPPER_ALLOW_TX=false
# Caps for transmissions
MCPGM_FLIPPER_TX_MAX_SECONDS=10
# Stream raw lines to logs for audit/debug
MCPGM_FLIPPER_LOG_STREAMS=false
# Optional WebSocket bridge for Android/iOS or constrained environments
# Example: ws://<desktop-hostname>:9910
MCPGM_FLIPPER_BRIDGE_URL=
